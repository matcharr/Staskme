<div class="col-lg-9 mb-4" id="table">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Statut</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <% if user != current_user %>
          <tr id="<%= user.id %>">
          <th scope="row"><%= user.id %></th>
          <td><%= user.email%></td>
          <% if user.is_admin == true %>
            <td style="color: red;">admin</td>
          <% elsif user.employed %>
            <td style="color: blue;">employ√©</td>
          <% elsif !user.employed %>
            <td style="color: green;">client</td>
          <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>