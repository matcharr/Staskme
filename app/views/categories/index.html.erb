<head>
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>

<%= render 'carousel' %>

<main id="main">

  <%= render 'about' %>
  <%= render 'whyus' %>
  <%= render 'operation' %>

<!-- ======= Create a Mission Section ======= -->
  <section id="book-a-table" class="book-a-table">
    <div class="container">

      <div class="section-title">
        <h2>Créer une <span>Mission</span></h2>
        <p>Pour créer une mission rien de plus simple, choisissez une catégorie et remplissez le formulaire</p>
        </br>
        <a href="<%= new_mission_path %>" class="btn btn-warning">Créer une mission</a>
      </div>
    </div>
  </section><!-- End Create a Mission Section -->

<!-- ======= Join a Team Section ======= -->
  <section id="book-a-table" class="book-a-table">
    <div class="container">

      <div class="section-title">
        <h2>Rejoindre <span>L'equipe</span></h2>
        <p>Eloigné du monde du travail ? vous recherchez de nouvelles opportunités ?</p>
        </br>
        <% if current_user %>
          <%= link_to "Rejoindre l'équipe", user_path(current_user.id), method: 'put', class: 'btn btn-warning' %>
        <% else %>
          <p>Inscrivez-vous pour nous rejoindre !</p>
        <% end %>
      </div>
    </div>
  </section><!-- End Join a Team Section -->

  <%= render 'contact' %>

</main>